{
    "name": "server",
    "version": "1.0.0",
    "main": "dist/index.js",
    "license": "MIT",
    "scripts": {
        "start-emulator": "run-script-os start-emulator",
        "start-emulator:win32": "firebase serve --only firestore > NUL",
        "start-emulator:darwin:linux": "firebase serve --only firestore > /dev/null",
        "ci": "start-server-and-test start-emulator http-get://127.0.0.1:8080 test-once",
        "clean": "rimraf dist/*",
        "tsc": "tsc",
        "build": "npm-run-all clean tsc",
        "dev-start": "npm-run-all build only-start",
        "start": "nodemon --watch src -e ts --exec yarn dev-start",
        "only-start": "cross-var $npm_node_execpath --inspect .",
        "debug": "run-script-os",
        "debug:win32": "set DEBUG=express:* && npm-run-all start",
        "debug:darwin:linux": "DEBUG=express:* npm-run-all start",
        "test": "nodemon --watch . -e ts --exec yarn test-once",
        "test-once": "start-server-and-test start-emulator http-get://127.0.0.1:8080 only-test",
        "only-test": "jest"
    },
    "dependencies": {
        "@types/body-parser": "^1.17.1",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/node": "^12.7.2",
        "@types/uuid": "^3.4.5",
        "axios": "^0.19.0",
        "body-parser": "^1.19.0",
        "class-transformer": "^0.2.3",
        "dotenv": "^8.1.0",
        "express": "^4.17.1",
        "firebase-admin": "^8.4.0",
        "reflect-metadata": "^0.1.13",
        "uuid": "^3.3.3"
    },
    "devDependencies": {
        "@firebase/firestore-types": "^1.4.4",
        "@firebase/testing": "^0.12.2",
        "@types/jest": "^24.0.18",
        "cross-var": "^1.1.0",
        "firebase-tools": "^7.3.0",
        "jest": "^24.9.0",
        "nodemon": "^2.0.12",
        "prettier": "^1.18.2",
        "rimraf": "^3.0.0",
        "run-script-os": "^1.0.7",
        "start-server-and-test": "^1.10.0",
        "ts-jest": "^24.0.2",
        "typescript": "^3.5.3",
        "yarn-run-all": "^3.1.1"
    }
}
